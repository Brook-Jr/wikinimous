<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4"><%= @article.title %></h2>

      <p><%= @article.content %></p>

      <div class="mt-4">
        <%= link_to '<i class="fa-solid fa-square-pen"></i>'.html_safe, edit_article_path(@article), class: "btn btn-primary me-2" %>
        <%= link_to '<i class="fa-solid fa-square-xmark"></i>'.html_safe, article_path(@article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
